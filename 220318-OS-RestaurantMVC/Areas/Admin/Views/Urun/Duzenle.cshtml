@model Urun

@{
    ViewData["Title"] = "Urun Düzenle";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../../images/bg_5.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-end justify-content-center">
            <div class="col-md-9 ftco-animate text-center mb-5">
                <h1 class="mb-2 bread">Ürün Düzenle</h1>
                <p class="breadcrumbs"><span class="mr-2"></span><span><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fa fa-chevron-right"></i></a></span></p>
            </div>
        </div>
    </div>
</section>


<div class="container">
    <h3>Ürün Bilgileri Düzenle</h3>
    <form method="post" asp-action="Duzenle" enctype="multipart/form-data">
     <img width="250" height="250" src="~/images/uploads/@Model.UrunResimURL" alt="@Model.UrunAdi">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group form-check"><input type="checkbox" class="form-check-input" id="gorselEkle"><label class="form-check-label" for="gorselEkle" name="gorselEkle">Görseli değiştirmek istiyor musunuz?</label></div>
        <div id="gorselAlan" class="d-none">
            <label for="resim">Görsel</label>
            <input asp-for="UrunResimURL" hidden />
            <input type="file" class="form-control-file" id="resim" name="resim">
        </div>
        <div class="form-group m-3">
            <input asp-for="UrunId" class="form-control" hidden />
            <br />
            <label asp-for="Kategori"></label>
            <select class="form-control" asp-for="KategoriId" asp-items="ViewBag.Kategoriler">
            </select>
            <br />
            <label asp-for="UrunAdi"></label>
            <input asp-for="UrunAdi" class="form-control" />

            <br />
            <label asp-for="UrunFiyat"></label>
            <input asp-for="UrunFiyat" class="form-control" type="text" step="0.1" required />

            <br />
            <label asp-for="UrunTanimi"></label>
            <textarea asp-for="UrunTanimi" class="form-control" rows="3"></textarea>
            <br />


            <button class="btn btn-primary">Ürün Güncelle</button>
            <button asp-action="Index" class="btn btn-secondary">İptal</button>
        </div>
    </form>
</div>
@section Scripts
{
<script>
    const input=document.querySelector("#gorselEkle");
    const gorselAlan=document.querySelector("#gorselAlan");
    input.addEventListener("change",function(e)
    {
        gorselAlan.classList.toggle("d-none");
    })

</script>
}