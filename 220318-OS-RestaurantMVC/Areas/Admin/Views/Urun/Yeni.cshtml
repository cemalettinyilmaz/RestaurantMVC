@model Urun

@{
	ViewData["Title"] = "Urun Düzenle";
}
<section class="hero-wrap hero-wrap-2" style="background-image: url('../../images/bg_5.jpg');" data-stellar-background-ratio="0.5">
	<div class="overlay"></div>
	<div class="container">
		<div class="row no-gutters slider-text align-items-end justify-content-center">
			<div class="col-md-9 ftco-animate text-center mb-5">
				<h1 class="mb-2 bread">Yeni Ürün Ekle</h1>
				<p class="breadcrumbs"><span class="mr-2"></span><span><a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home <i class="fa fa-chevron-right"></i></a></span></p>
			</div>
		</div>
	</div>
</section>
<div class="container">
	<h3>Yeni Ürün Bilgileri</h3>

	<form method="post" asp-action="Yeni" enctype="multipart/form-data">
		<div asp-validation-summary="All" class="text-danger"></div>
		<div class="form-group m-3">
			<br />
			<label asp-for="Kategori"></label>
			<select class="form-control" asp-for="KategoriId" asp-items="ViewBag.Kategoriler">
			</select>
			<br />
			<label asp-for="UrunAdi"></label>
			<input asp-for="UrunAdi" class="form-control" />

			<br />
			<label asp-for="UrunFiyat"></label>
			<input asp-for="UrunFiyat" class="form-control" type="number" step="0.1" />

			<br />
			<label asp-for="UrunTanimi"></label>
			<textarea asp-for="UrunTanimi" class="form-control" rows="3"></textarea>
			<br />

			<label for="resim">Görsel</label>
			<input type="file" class="form-control-file" id="resim" name="resim">

			<br />

			<button class="btn btn-primary">Ürün Ekle</button>
			<button asp-action="Index" class="btn btn-secondary">İptal</button>
		</div>
	</form>
</div>